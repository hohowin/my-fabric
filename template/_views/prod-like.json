{
    "network": {
        "name": "myplatform",
        "host-delimiter": ".",
        "compose-project-name": "myproject",
        "consortium": "Big4HK",
        "orderer-channel": "ordererchannel",
        "peer-channels": [
            "genericchannel"
        ],
        "nodes": [
        ]
    },

    "artifacts": {
        "local": "../artifacts",
        "docker": "/var/artifacts",
        "crypto": "crypto-config",
        "production": "production",
        "caserver-home": "server",
        "orderer-home": "orderer",
        "peers-working-dir": "/opt/gopath/src/github.com/hyperledger/fabric"
    },

    "orgs": {
        "tls": {
            "domain": "cbody.com",
            "ca": {
                "host": "tls-ca",
                "port": "6052",
                "admin": "tls-ca-admin",
                "adminpw": "tls-ca-adminPW"
            }
        },
        "orderer": {
            "name": "CBody",
            "id": "CBodyMSP",
            "domain": "cbody.com",
            "orderers": {
                "type": "etcdraft",
                "use-kafka": false,
                "use-raft": true,
                "batch-timeout": "2s",
                "max-message-count": "500",
                "absolute-max-bytes": "99 MB",
                "preferred-max-bytes": "2 MB",
                "max-channels": "10",
                "genesis-profile": "SampleInsecureKafka",
                "raft-tick-interval": "500ms",
                "raft-election-tick": "10",
                "raft-heartbeat-tick": "1",
                "raft-max-inflight-blocks": "5",
                "raft-snapshot-interval-size": "20 MB",
                "endpoints": [
                    {
                        "-": "orderer0",
                        "ext-port": "7050"
                    },
                    {
                        "-": "orderer1",
                        "ext-port": "7150"
                    },
                    {
                        "-": "orderer2",
                        "ext-port": "7250"
                    },
                    {
                        "-": "orderer3",
                        "ext-port": "7350"
                    },
                    {
                        "-": "orderer4",
                        "ext-port": "7450",
                        "islast": true
                    }
                ]
            },
            "kafkas": {
                "retry-shortinterval": "1s",
                "retry-shorttotal": "30s",
                "endpoints": [
                ],
                "ports": [
                    "9092",
                    "9093"
                ]
            },
            "zookeepers": {
                "endpoints": [
                ],
                "ports": [
                    "2181",
                    "2888",
                    "3888"
                ]
            },
            "ca": {
                "host": "rca",
                "port": "6053",
                "admin": "rca-hktfp-admin",
                "adminpw": "rca-hktfp-adminPW"
            }
        },
        "peer": [
            {
                "name": "PccH",
                "script-naming": "org1",
                "id": "PccHMSP",
                "domain": "pcch.net",
                "peers": {
                    "anchor": "peer0",
                    "anchor-port": "7051",
                    "endpoints": [
                        {
                            "-": "peer0",
                            "port": "7051",
                            "chaincode-port": "7052",
                            "eventhub-port": "7053"
                        },
                        {
                            "-": "peer1",
                            "port": "7151",
                            "chaincode-port": "7152",
                            "eventhub-port": "7153",
                            "islast": true
                        }
                    ]
                },
                "ca": {
                    "host": "rca",
                    "port": "6054",
                    "admin": "rca-pcch-admin",
                    "adminpw": "rca-pcch-adminPW"
                }
            },
            {
                "name": "HKGov",
                "script-naming": "org2",
                "id": "HKGovMSP",
                "domain": "gov.hk",
                "peers": {
                    "anchor": "peer0",
                    "anchor-port": "7251",
                    "endpoints": [
                        {
                            "-": "peer0",
                            "port": "7251",
                            "chaincode-port": "7252",
                            "eventhub-port": "7253"
                        },
                        {
                            "-": "peer1",
                            "port": "7351",
                            "chaincode-port": "7352",
                            "eventhub-port": "7353",
                            "islast": true
                        }
                    ]
                },
                "ca": {
                    "host": "rca",
                    "port": "6055",
                    "admin": "rca-hkgov-admin",
                    "adminpw": "rca-hkgov-adminPW"
                }
            }
        ]
    }
}
